<div id="category-show" class="container">
  <h1><%= @category.libCategory %></h1>
  <div class="row products-container">
    <% i = 0 %>
    <% @products.each do |product| %>
    <div class="product col-sm-3 <% if i%3===0 %>col-sm-offset-3-2<% end %>">
      <p class="price"><%= product.price %>â‚¬</p>
      <div class="visuel">
        <%= image_tag product.images[0].file.url(:medium) %>
      </div>
      <div class="content">
        <%= link_to product do %>
        <p class="title"><%= product.name %></p>
        <% end %>
        <%= link_to "", product_to_cart_path(product.id), class: "add-product-to-cart", :data => {:url => product.images[0].file.url(:medium), :title =>  product.name } %>
      </div>
    </div>
    <% i+=1 %>
    <% end %>
  </div>
  <%= link_to 'Edit', edit_category_path(@category) %> |
  <%= link_to 'Back', categories_path %>
</div>
<%= render "layouts/popincart" %>
