<div class="container" id="payments_container">
  <%= render "arianne" %>
  <%= form_for @payment do |f| %>
  <h2>Facturation</h2>
    <div class="form-group">
      <%= f.label :fact_firstname, "Prénom *" %>
      <%= f.text_field :fact_firstname, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :fact_lastname, "Nom *" %>
      <%= f.text_field :fact_lastname, class:"form-control" %>
    </div>
    <div class="form-group form-large">
      <%= f.label :fact_address, "Addresse de facturation *" %>
      <%= f.text_field :fact_address, class:"form-control" %>
    </div>
    <div class="form-group form-large">
      <%= f.label :fact_addresscomplement, "Complément d'adresse" %>
      <%= f.text_field :fact_addresscomplement, class:"form-control" %>
    </div>
    <div class="form-group form-large">
      <%= f.label :fact_addresscomplementbis, "Complement d'adresse bis" %>
      <%= f.text_field :fact_addresscomplementbis, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :fact_zipcode, "Code Postal *" %>
      <%= f.text_field :fact_zipcode, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :fact_city, "Ville *" %>
      <%= f.text_field :fact_city, class:"form-control" %>
    </div>
    <%= f.hidden_field :step, value: "fact" %>
    <div class="actions">
      <%= f.submit class:"btn btn-primary btn-command", value:"Passer à la livraison" %>
    </div>
  <% end %>
</div>
