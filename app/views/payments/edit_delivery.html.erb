<div class="container" id="payments_container">
  <%= render "arianne" %>
  <%= form_for @payment do |f| %>
    <h2>Livraison</h2>
    <div class="form-group">
      <%= f.label :deliver_firstname %>
      <%= f.text_field :deliver_firstname, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :deliver_lastname %>
      <%= f.text_field :deliver_lastname, class:"form-control" %>
    </div>
    <div class="form-group form-large">
      <%= f.label :deliver_address %>
      <%= f.text_field :deliver_address, class:"form-control" %>
    </div>
    <div class="form-group form-large">
      <%= f.label :deliver_addresscomplement %>
      <%= f.text_field :deliver_addresscomplement, class:"form-control" %>
    </div>
    <div class="form-group form-large">
      <%= f.label :deliver_addresscomplementbis %>
      <%= f.text_field :deliver_addresscomplementbis, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :deliver_zipcode %>
      <%= f.text_field :deliver_zipcode, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :deliver_city %>
      <%= f.text_field :deliver_city, class:"form-control" %>
    </div>
    <%= f.hidden_field :step, value: "delivery" %>
    <div class="actions">
      <%= f.submit class:"btn btn-primary btn-command", value:"Passer Ã  la livraison" %>
    </div>
  <% end %>
</div>
